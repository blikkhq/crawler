{
  "id": "rabbitmq",
  "kind": "Pod",
  "apiVersion": "v1beta1",
  "desiredState": {
    "manifest": {
      "version": "v1beta1",
      "id": "rabbitmq",
      "containers": [{
        "name": "rabbitmq",
        "image": "dockerfile/rabbitmq",
        "ports": [{
          "containerPort": 5672,
          "hostPort": 5672
        },
        {
          "containerPort": 15672,
          "hostPort": 15672  
        }],
        "volumeMounts": [{
          "name": "rabbitmq-persistent-storage",
          "mountPath": "/data/mnesia"
        }]
      }],
      "volumes": [{
        "name": "rabbitmq-persistent-storage",
        "source": {"emptyDir" : {}}
      }]
    }
  },
  "labels": {
    "name": "rabbitmq"
  }
}